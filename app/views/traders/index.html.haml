%p#notice= notice
%h1 Traders
%table
  %thead
    %tr
      %th First name
      %th Last name
      %th Mobile number
      %th Approved
      %th User
      %th{:colspan => "3"}
  %tbody
    - @traders.each do |trader|
      %tr
        %td= trader.first_name
        %td= trader.last_name
        %td= trader.mobile_number
        %td= trader.approved
        %td= trader.user_id
        %td= link_to 'Show', trader
        %td= link_to 'Edit', edit_trader_path(trader)
        %td= link_to 'Destroy', trader, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Trader', new_trader_path
