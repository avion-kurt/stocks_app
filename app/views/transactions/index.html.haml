%p#notice= notice
%h1 Transactions
%table
  %thead
    %tr
      %th Stock
      %th User
      %th Stock share
      %th Date
      %th Price
      %th Amount
      %th{:colspan => "3"}
  %tbody
    - @transactions.each do |transaction|
      %tr
        %td= transaction.stock_id
        %td= transaction.user_id
        %td= transaction.stock_share
        %td= transaction.date
        %td= transaction.price
        %td= transaction.price * transaction.stock_share
        %td= link_to 'Show', transaction
        %td= link_to 'Edit', edit_transaction_path(transaction)
        %td= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Transaction', new_transaction_path
