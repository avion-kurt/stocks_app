%p#notice= notice
%h1 Portfolio
%table
  %thead
    %tr
      %th Stock
      %th User
      %th Stock share
      %th Date
      %th Price
      %th Amount
      %th Current Amount
      %th % Change
      %th Profit / Loss
      %th{:colspan => "3"}
  %tbody
    - @transactions.each do |transaction|
      %tr
        %td= transaction.stock_symbol
        %td= transaction.trader_id
        %td= transaction.stock_share
        %td= transaction.date
        %td= transaction.price
        %td= transaction.total_price
        %td= transaction.current_amount
        %td= number_to_percentage(transaction.percent_change)
        %td= transaction.profit_loss
        %td= link_to 'Show', transaction
        %td= link_to 'Edit', edit_transaction_path(transaction)
        %td= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'Stocks', stocks_path
